{
  "name": "fontsource-roboto",
  "description": "Self-host the Roboto font in a neatly bundled NPM package.",
  "filename": "index.css",
  "keywords": [
    "fontsource",
    "font",
    "font family",
    "google fonts",
    "roboto",
    "Roboto",
    "css",
    "sass",
    "front-end",
    "web",
    "typeface",
    "variable"
  ],
  "authors": [
    {
      "name": "Google Inc."
    }
  ],
  "license": "Apache-2.0",
  "homepage": "https://fontsource.org/fonts/roboto",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fontsource/font-files.git"
  },
  "autoupdate": {
    "excludeFromSearch": true,
    "fileMap": [
      {
        "basePath": "",
        "files": [
          "*.css",
          "files/*.@(woff|woff2)"
        ]
      }
    ],
    "source": "npm",
    "target": "@fontsource/roboto"
  }
}
