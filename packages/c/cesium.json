{
  "name": "cesium",
  "description": "CesiumJS is a JavaScript library for creating 3D globes and 2D maps in a web browser without a plugin.",
  "keywords": [
    "3D",
    "webgl",
    "geospatial",
    "map",
    "globe"
  ],
  "license": "Apache-2.0",
  "homepage": "http://cesium.com/cesiumjs/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CesiumGS/cesium.git"
  },
  "authors": [
    {
      "name": "Cesium GS, Inc.",
      "url": "https://cesium.com"
    }
  ],
  "autoupdate": {
    "source": "npm",
    "target": "cesium",
    "fileMap": [
      {
        "basePath": "Build/Cesium",
        "files": [
          "*.@(js|d.ts)",
          "Assets/**/*.@(json|svg|jpg|png|xml)",
          "ThirdParty/**/*.@(js|wasm)",
          "Widgets/**/*.@(css|png|svg|gif)",
          "Workers/*.js"
        ]
      }
    ]
  },
  "filename": "Cesium.js"
}
