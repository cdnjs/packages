{
  "name": "codemirror",
  "filename": "codemirror.min.js",
  "description": "In-browser code editing made bearable",
  "keywords": [
    "JavaScript",
    "CodeMirror",
    "Editor"
  ],
  "homepage": "http://codemirror.net",
  "repository": {
    "type": "git",
    "url": "https://github.com/codemirror/CodeMirror.git"
  },
  "license": "MIT",
  "autoupdate": {
    "source": "npm",
    "target": "codemirror",
    "fileMap": [
      {
        "basePath": "lib",
        "files": [
          "*.+(js|css)"
        ]
      },
      {
        "basePath": "",
        "files": [
          "+(addon|theme|mode|keymap)/**/*.+(js|css)"
        ]
      }
    ]
  }
}
