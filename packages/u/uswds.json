{
  "name": "uswds",
  "filename": "js/uswds.min.js",
  "description": "Open source UI components and visual style guide for U.S. government websites",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/18F/web-design-standards.git"
  },
  "license": "SEE LICENSE in LICENSE.md",
  "keywords": [
    "uswds"
  ],
  "autoupdate": {
    "source": "npm",
    "target": "@uswds/uswds",
    "fileMap": [
      {
        "basePath": "dist",
        "files": [
          "css/*.css?(.map)",
          "js/*.js?(.map)",
          "img/**/*.@(gif|ico|jpg|png|svg|webp)",
          "fonts/**/*.@(ttf|woff|woff2)"
        ]
      }
    ]
  },
  "authors": [
    {
      "name": "18F"
    }
  ],
  "optimization": {
    "png": false
  }
}
