{
  "name": "bricks.js",
  "description": "A blazing fast masonry layout generator for fixed width elements.",
  "filename": "bricks.min.js",
  "author": {
    "name": "Michael Cavalea"
  },
  "homepage": "http://callmecavs.com/bricks.js/",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/callmecavs/bricks.js"
  },
  "keywords": [
    "grid",
    "masonry",
    "layout",
    "packing"
  ],
  "autoupdate": {
    "source": "npm",
    "target": "bricks.js",
    "fileMap": [
      {
        "basePath": "dist",
        "files": [
          "**/*.!(html)"
        ]
      },
      {
        "basePath": "src",
        "files": [
          "bricks*"
        ]
      }
    ]
  }
}
