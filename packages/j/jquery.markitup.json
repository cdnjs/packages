    "editor",
    "form",
    "jquery",
    "jquery-form",
    "jquery-plugin",
    "json",
    "markup",
    "textarea"
  ],
  "homepage": "http://markitup.jaysalvat.com/home/",
  "repository": {
    "type": "git",
    "url": "https://github.com/markitup/1.x.git"
  },
  "autoupdate": {
    "source": "git",
    "target": "https://github.com/markitup/1.x.git",
    "fileMap": [
      {
        "basePath": "markitup",
        "files": [
          "**/*.@(js|css|png)"
        ]
      }
    ]
  },
  "authors": [
