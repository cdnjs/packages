{
  "name": "jodit",
  "filename": "jodit.min.js",
  "description": "Jodit is awesome and usefully wysiwyg editor with filebrowser",
  "homepage": "http://xdsoft.net/jodit/",
  "keywords": [
    "wysiwyg",
    "editor",
    "rich",
    "jodit"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/xdan/jodit.git"
  },
  "autoupdate": {
    "source": "npm",
    "target": "jodit",
    "fileMap": [
      {
        "basePath": "build",
        "files": [
          "es2015/*.@(css|js)",
          "es2015/**/*.@(css|js)",
          "es2018/*.@(css|js)",
          "es2018/**/*.@(css|js)",
          "es2021/*.@(css|js)",
          "es2021/**/*.@(css|js)",
          "es2021.en/*.@(css|js)",
          "es2021.en/**/*.@(css|js)",
          "es5/*.@(css|js)",
          "es5/**/*.@(css|js)"
        ]
      }
    ]
  },
  "authors": [
    {
      "name": "Chupurnov",
      "email": "chupurnov@gmail.com",
      "url": "http://xdsoft.net/"
    }
  ]
}
